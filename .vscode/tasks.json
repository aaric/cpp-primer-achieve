{
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceFolder}/build"
    },
    "tasks": [
        {
            "type": "shell",
            "label": "CMake",
            "command": "cmake.exe",
            "args": [
                "-G",
                "'MinGW Makefiles'",
                ".."
            ]
        },
        {
            "type": "shell",
            "label": "Make",
            "command": "mingw32-make.exe",
            "args": [
                "-j2"
            ],
            "dependsOn": [
                "CMake"
            ]
        },
        {
            "label": "Build",
            "dependsOn": [
                "Make"
            ]
        }
    ]
}